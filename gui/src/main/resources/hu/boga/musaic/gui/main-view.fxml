<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.boga.musaic.gui.MainController">
    <top>
        <MenuBar fx:id="mainmenu">
            <Menu text="File">
                <MenuItem onAction="#createWindow" text="New"/>
                <MenuItem onAction="#open" text="Open"/>
                <SeparatorMenuItem/>
                <MenuItem text="Exit"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <items>
                    <MenuItem mnemonicParsing="false" text="About"/>
                </items>
            </Menu>
        </MenuBar>
    </top>
</BorderPane>
