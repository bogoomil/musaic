<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hu.boga.musaic.gui.sequencemanager.SequenceManager">
    <top>
        <MenuBar fx:id="mainmenu" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Sequence">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Save" onAction="#saveSequence"/>
                        <MenuItem mnemonicParsing="false" text="Save as..." onAction="#saveAsSequence"/>
                        <MenuItem mnemonicParsing="false" text="Import..." onAction="#openSequence"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Settings"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Track">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Add"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
