<?xml version="1.0" encoding="UTF-8"?>

<?import hu.boga.musaic.gui.trackeditor.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane" style="-fx-pref-width: 100%;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.boga.musaic.gui.trackeditor.TrackEditor">
        <top>
            <AnchorPane style="-fx-pref-width: 100%;" BorderPane.alignment="CENTER">
                <VBox>
                    <HBox>
                        <Button mnemonicParsing="false" onAction="#removeTrack" text="Track-" />
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
                    </HBox>
                    <HBox>
                        <Label text="Channel" />
                        <ComboBox fx:id="channelCombo" prefHeight="24.0" prefWidth="114.0" />
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
                    </HBox>
                    <HBox>
                        <Label text="Name" />
                        <TextField fx:id="trackName" GridPane.columnIndex="1" />
                        <CheckBox fx:id="cbMuted" text="Muted" GridPane.columnIndex="2" GridPane.rowIndex="2" />
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
                    </HBox>
                    <HBox>
                        <Label fx:id="zoomLabel" text="zoom" GridPane.rowIndex="2" />
                        <Slider fx:id="zoomSlider" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
                    </HBox>
                </VBox>
            </AnchorPane>
        </top>
        <center>
            <ScrollPane>
                <content>
                    <TrackEditorPanel fx:id="trackEditorPanel" />
                </content>
            </ScrollPane>
        </center>
    </BorderPane>
