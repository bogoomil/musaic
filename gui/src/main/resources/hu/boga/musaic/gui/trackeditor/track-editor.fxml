<?xml version="1.0" encoding="UTF-8"?>

<?import hu.boga.musaic.gui.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.boga.musaic.gui.trackeditor.TrackEditorPresenterImpl">
    <top>
        <AnchorPane fx:id="topAnchorPane" style="-fx-pref-width: 100%;" BorderPane.alignment="CENTER">
            <VBox>
                <HBox spacing="10.0">
                    <Label text="Root" />
                    <NoteNameCombo fx:id="rootCombo" prefWidth="150.0" />
                    <Label text="Mode" />
                    <ModeCombo fx:id="modeCombo" prefWidth="150.0" />
                    <Button fx:id="btnClearMode" mnemonicParsing="false" text="clear">
                        <graphic>
                            <FontIcon iconLiteral="mdi-close-circle-outline" />
                        </graphic>
                    </Button>
                    <Button fx:id="btnDuplicateLoop" mnemonicParsing="false" text="Duplicate loop">
                        <graphic>
                            <FontIcon iconLiteral="mdi-content-duplicate" />
                        </graphic>
                    </Button>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <HBox spacing="10.0">
                    <VBox spacing="5.0">
                        <HBox spacing="5.0">
                            <Label fx:id="zoomLabel">
                                <graphic>
                                    <FontIcon iconLiteral="mdi-magnify-plus" scaleX="2.0" scaleY="2.0" />
                                </graphic>
                            </Label>
                            <Slider fx:id="zoomSlider" prefHeight="16.0" prefWidth="486.0" />
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                        </HBox>
                        <HBox spacing="5.0">
                     <Label text="Chord" />
                            <ChordTypeCombo fx:id="chordType" />
                     <Label text="Length" />
                            <NoteLengthCombo fx:id="noteLength" />
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                        </HBox>

                    </VBox>




                    <VBox>
                        <children>
                            <Button fx:id="btnMoveUp" mnemonicParsing="false">
                                <graphic>
                                    <FontIcon iconLiteral="mdi-arrow-up" />
                                </graphic>
                                <VBox.margin>
                                    <Insets left="30.0" />
                                </VBox.margin>
                            </Button>
                            <HBox>
                                <Button fx:id="btnMoveLeft">
                                    <graphic>
                                        <FontIcon iconLiteral="mdi-arrow-left" />
                                    </graphic>
                                </Button>
                                <Button fx:id="btnMoveRight">
                                    <graphic>
                                        <FontIcon iconLiteral="mdi-arrow-right" />
                                    </graphic>
                                    <HBox.margin>
                                        <Insets left="29.0" />
                                    </HBox.margin>
                                </Button>
                            </HBox>
                            <Button fx:id="btnMoveDown" mnemonicParsing="false">
                                <graphic>
                                    <FontIcon iconLiteral="mdi-arrow-down" />
                                </graphic>
                                <VBox.margin>
                                    <Insets left="30.0" />
                                </VBox.margin>
                            </Button>
                        </children>
                    </VBox>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
            </VBox>
        </AnchorPane>
    </top>
    <center>
        <ScrollPane>
            <content>
                <AnchorPane>
                    <Group fx:id="panelGroup" />
                </AnchorPane>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
